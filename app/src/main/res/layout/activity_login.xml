<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_header2"

    >

    <RelativeLayout
        android:id="@+id/rl_one_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/v_one_login"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@drawable/jungle_book" />

        <RelativeLayout
            android:id="@+id/rl_two_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"

                android:textAlignment="center" />


        </RelativeLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/lin_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginTop="250dp"
        android:layout_marginLeft="10dp"
       android:layout_marginRight="10dp"
        android:orientation="vertical"
        android:visibility="visible">


                <EditText

                    android:id="@+id/mail"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:alpha="0.8"
                    android:background="@drawable/edit_bg"
                    android:hint="Enter Email"
                    android:inputType="textEmailAddress"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:textColor="#d71515"
                    android:textColorHint="#000"
                    android:textSize="18sp"
                    />

                <EditText
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="10dp"
                    android:alpha="0.8"
                    android:background="@drawable/edit_bg"
                    android:hint="Enter Password"
                    android:padding="10dp"
                    android:textColor="#d71515"
                    android:textColorHint="#000" />




    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="410dp"
        android:elevation="15dp"
        android:gravity="center">

        <Button
            android:id="@+id/button"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:background="@drawable/custom_circle"
            android:text="Login"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textSize="17dp"
            android:textColor="#fffefe" />


    </LinearLayout>

   <!-- 465dp-->


</RelativeLayout>