<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="15dp"
    android:foreground="?selectableItemBackground"
    android:visibility="visible"
    card_view:cardBackgroundColor="#e9e6e"
    card_view:cardCornerRadius="8dp"
    card_view:cardElevation="2dp"
    >


    <LinearLayout
        android:id="@+id/card_layout_data"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="3"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/image"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/profitsimage"

                />
            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:gravity="center"
                >

                <TextView
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:gravity="left"
                    android:text="22-05-2019"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#121111"
                    android:textSize="11dp"
                    android:typeface="sans"

                    />
            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:id="@+id/accounts_data_holder"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1.5"
            android:visibility="visible">

<!--
            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="3dp"

                >


                <TextView
                    android:id="@+id/CustomerName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="Avinash"
                    android:fontFamily="sans-serif-smallcaps"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#0b451c"
                    android:textSize="17dp"
                    android:textStyle="bold"
                    android:typeface="sans"

                    />



            </LinearLayout>-->




            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:weightSum="2">


                <TextView
                    android:id="@+id/paid_to"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="Sale :"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#030303"
                    android:fontFamily="sans-serif-smallcaps"
                    android:textSize="13dp"
                    android:typeface="sans" />


                <TextView
                    android:id="@+id/sale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="2545510"
                    android:paddingLeft="5dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#181515"
                    android:textSize="13dp"
                    android:typeface="sans"

                    />



            </LinearLayout>



            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >


                <TextView
                    android:id="@+id/rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:singleLine="true"
                    android:text="Expense :"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#151313"
                    android:fontFamily="sans-serif-smallcaps"
                    android:textSize="13dp"
                    android:typeface="sans" />

                <TextView
                    android:id="@+id/expense"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:gravity="left"
                    android:singleLine="false"
                    android:text="20555"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#1b1919"
                    android:typeface="sans"
                    android:textSize="13dp"

                    />
            </LinearLayout>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:padding="3dp"
                android:background="@color/colorPrimaryDark"
                >


                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:singleLine="true"
                    android:text="Amount :"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#ffff"
                    android:fontFamily="sans-serif-smallcaps"
                    android:textSize="15dp"
                    android:typeface="sans" />

                <TextView
                    android:id="@+id/amount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:gravity="left"
                    android:singleLine="false"
                    android:text="2055522"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#ffff"
                    android:typeface="sans"
                    android:textSize="15dp"

                    />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:gravity="center"
            android:background="@color/colorPrimaryDark"
            android:orientation="vertical">

            <TextView
                android:id="@+id/Totalcost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Status :"
                android:textAllCaps="false"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#ffffff"
                android:textSize="15dp"
                android:textStyle="bold"
                android:typeface="sans"

                />

            <TextView
                android:id="@+id/status"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="Profit"
                android:textAllCaps="false"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#ffffff"
                android:textSize="16dp"
                android:textStyle="bold"
                android:typeface="sans"

                />

        </LinearLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>